<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
        <p class="nav user">Welcome, <b><%= current_user.username %></b> Guru</p>
        <p class="nav user"><%= link_to 'Log out', logout_path, method: "delete" %>
      <% else %>
        <%= link_to 'Log in', login_path %>
    <% end %>
    <%= yield %><br>
    <p><%= render 'shared/footer' %></p>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
