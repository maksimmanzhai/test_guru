<%= form_with model: [@test, @question], local: true do |form| %>

<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <%= render'shared/errors', resource: @question %>

  <p>
    <%= form.label :body %><br>
    <%= form.text_field :body, id: :question_body %>
  </p>

  <p><%= form.submit %></p>

<% end %>
